<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/brushed"
    tools:context=".advanced.ControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.lizhy.Sky.radio.StickView
            android:id="@+id/stickView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <com.lizhy.Sky.radio.StickView
            android:id="@+id/stickView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:text="@string/Connect_frsky"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_AccCalibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/bt_Connect"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:text="@string/AccCalibration"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_QENHight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/bt_AccCalibration"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:text="@string/QEN_hight"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_HandsMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/bt_QENHight"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_Unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/bt_HandsMode"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:text="@string/Unlock"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bt_Config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/tilt_scale_short"
        android:clickable="true"
        android:text="@string/page3"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="17sp" />
</RelativeLayout>